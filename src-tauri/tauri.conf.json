{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Topoo Gateway",
  "version": "0.0.126",
  "identifier": "com.viosson.topoo.gateway",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Topoo Gateway",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 700,
        "resizable": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src ipc: http://ipc.localhost https://p16-backend.wissen-damon.workers.dev http://localhost:19527"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist"
    },
    "windows": {}
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/viosson-d/topoo-gateway/releases/latest/download/updater.json"
      ],
      "dialog": true,
      "pubkey": "RWStbXNRvSmN3g7MtCLp8oNzV0wSr0k6kf2m0gczOFy08Cou3NXo7JEr"
    }
  }
}